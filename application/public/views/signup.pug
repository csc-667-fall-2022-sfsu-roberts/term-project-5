extends ./layouts/signup-layout

block content
    // partial:index.partial.html
    .container.right-panel-active
        // Sign Up
        .container__form.container--signup
            form#signup_form.form(action="/auth/signup" method="post")
                h2.form__title Sign Up
                input.input(type='text' name='signup_username' placeholder='Username')
                input.input(type='email' name='signup_email' placeholder='Email')
                input.input(type='password' name='signup_password' placeholder='Password')
                input.input(type='password' name='signup_confirm' placeholder='Confirm Password')
                button.btn Sign Up
            
        // Sign In
        .container__form.container--signin
            form#signin_form.form(action="/auth/signin" method="post")
                h2.form__title Sign In
                input.input(type='email' name='signin_email' placeholder='Email')
                input.input(type='password' name='signin_password' placeholder='Password')
                a.link(href='#') Forgot your password?
                button.btn Sign In

        // Overlay
        .container__overlay
            .overlay
                .overlay__panel.overlay--left
                    button#signIn.btn Sign In
                .overlay__panel.overlay--right
                    button#signUp.btn Sign Up

    // partial
    script(src='../frontend-js/signup.js')
